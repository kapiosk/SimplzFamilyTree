@page
@model SimplzFamilyTree.Pages.PersonRelations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonRelation[0].Relation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PersonRelation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Relation)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PersonRelationId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PersonRelationId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PersonRelationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
